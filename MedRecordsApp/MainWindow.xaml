<!-- Filename : MainWindow.xaml -->
<Window x:Class="MedRecordsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedRecordsApp"
        xmlns:views="clr-namespace:MedRecordsApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Main tab: Models -->
    <TabControl Grid.Row="0" x:Name="ModelTabs">
      <TabItem Header="Doctors" x:Name="DoctorsTab"/>
      <TabItem Header="Patients" x:Name="PatientsTab"/>
      <TabItem Header="Diagnoses" x:Name="DiagnosesTab"/>
      <TabItem Header="Treatments" x:Name="TreatmentsTab"/>


    </TabControl>
  </Grid>

</Window>
